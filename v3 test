        function testFileUpload() {
            console.log('=== FILE UPLOAD DEBUG TEST ===');
            
            const uploadArea = document.getElementById('jsonUpload');
            const fileInput = document.getElementById('fileInput');
            
            console.log('Upload Area:', uploadArea);
            console.log('File Input:', fileInput);
            
            if (!uploadArea) {
                showNotification('âŒ Upload area not found!', 'error');
                return;
            }
            
            if (!fileInput) {
                showNotification('âŒ File input not found!', 'error');
                return;
            }
            
            // Test file input click
            console.log('Testing file input click...');
            fileInput.click();
            
            showNotification('ğŸ”§ Check browser console (F12) for debug information', 'info');
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM Content Loaded - Initializing...'); // Debug log
            
            // Setup JSON upload
            setupJsonUpload();
            
            // Add event listeners for real-time calculation
            const inputs = document.querySelectorAll('input');
            console.log('Found inputs:', inputs.length); // Debug log
            inputs.forEach(input => {
                input.addEventListener('input', calculateSignature);
            });
            
            // Initial calculation
            console.log('Performing initial calculation...'); // Debug log
            calculateSignature();
        });
    </script>
